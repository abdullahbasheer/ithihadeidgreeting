<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SL Ithihad Eid Greeting</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');
        
        body { 
            text-align: center; 
            font-family: 'Roboto', sans-serif; 
        }
        canvas {  
            margin-top: 10px; 
        }
    </style>
</head>
<body>
    <h2>Enter Your Name</h2>
    <input type="text" id="nameInput" placeholder="Enter your name"><br><br>
    <canvas id="canvas" width="400" height="400"></canvas><br><br>
    <button id="downloadBtn">Download Image</button>

    <script>
        const nameInput = document.getElementById('nameInput');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const downloadBtn = document.getElementById('downloadBtn');

        let image = new Image();
        image.src = 'images/img-template.png'; // Replace with your image path

        image.onload = function() {
            drawImageWithText();
        };

        function drawImageWithText() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.drawImage(image, 0, 0, 400, 400);

            // Text Settings
            ctx.font = "24px 'Roboto', sans-serif";  
            ctx.fillStyle = "black";  // Adjust color if needed
            ctx.textAlign = "center";

            // Fixed Position
            ctx.fillText(nameInput.value, 200, 350); // Centered at X=200, Y=350 (50px from bottom)
        }

        nameInput.addEventListener('input', drawImageWithText);

        downloadBtn.addEventListener('click', () => {
            const link = document.createElement('a');
            link.download = 'customized-image.png';
            link.href = canvas.toDataURL();
            link.click();
        });
    </script>
</body>
</html>
